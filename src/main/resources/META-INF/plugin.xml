<idea-plugin>
    <id>io.github.painfu11y.buildnotifier</id>
    <name>Build Notifier</name>
    <version>1.0.0</version>

    <vendor email="avetisyan.vahan2003@gmail.com" url="https://github.com/PainFu11y">
        Painfu11y
    </vendor>

    <description>
        Sends notifications to Telegram or Email after build completion.
        Notify with a sound effect when the build is finished.
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">

        <externalSystemTaskNotificationListener
                implementation="io.github.painfu11y.buildnotifier.listeners.TaskFinishedListener"/>

        <toolWindow
                    id="Build Notifier"
                    anchor="right"
                    icon="/icons/icon1.svg"
                    factoryClass="io.github.painfu11y.buildnotifier.ui.BuildNotifierToolWindowFactory"
                    canCloseContent="false"
                    doNotActivateOnStart="false"/>
        </extensions>


</idea-plugin>
